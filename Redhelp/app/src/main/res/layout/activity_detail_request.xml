<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">

    <TextView
        android:id="@+id/blood_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AB+"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textSize="125dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        />
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blood_group"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Name:"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvname"
            android:text="user"
            android:textSize="25dp"
            android:textColor="@color/gray"
            />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"

        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvdeadline"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="deadline:"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvdeadline"
            android:text="user"
            android:textSize="25dp"
            android:textColor="@color/gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl2"
        android:layout_alignRight="@+id/blood_group"
        android:layout_alignEnd="@+id/blood_group"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp">
        <Button
          android:id="@+id/phone"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:background="@drawable/call"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
           android:id="@+id/mail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="25dp"

            android:textColor="@color/gray"
            android:background="@drawable/mail"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />
    </RelativeLayout>

    <fragment
       android:layout_below="@+id/rl3"
        android:layout_marginTop="5dp"
        android:id="@+id/detail_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:context="com.example.satyam.redhelp.InNeedActivity"
       />


    </RelativeLayout>
