<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfffefe"
        tools:context="com.example.satyam.redhelp.Add_Request_Activity">

        <TextView
            android:id="@+id/textView4"
            style=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="Request Details"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:text="Required Blood Group"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_margin="10dp"
            android:layout_marginTop="13dp"
            android:foregroundGravity="center"
            android:scrollIndicators="bottom"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="horizontal">


            <RadioGroup
                android:id="@+id/blood_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="38dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/abp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="AB+"
                    android:textAlignment="center" />

                <RadioButton

                    android:id="@+id/abn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="AB-"

                    android:textAlignment="center" />

                <RadioButton

                    android:id="@+id/ap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="A+"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/an"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="A-"
                    android:textAlignment="center" />


                <RadioButton
                    android:id="@+id/bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="B+"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/bn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="B-"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="O+"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/radio_button"
                    android:button="@android:color/transparent"
                    android:text="O-"
                    android:textAlignment="center" />

            </RadioGroup>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="61dp"
            android:text="scroll to view more group"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/horizontalScrollView"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignRight="@+id/horizontalScrollView"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="11dp"
            android:background="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Your Location Coordinates"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/map"
            android:layout_alignStart="@+id/map"
            android:layout_marginTop="46dp" />

        <fragment xmlns:tools="http://schemas.android.com/tools"

            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/textView7"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"

            tools:context="com.example.satyam.redhelp.Add_Request_Activity" />

        <Button
            android:id="@+id/btngetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map"
            android:layout_centerHorizontal="true"
            android:text="get Location" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/map"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"

            />

        <EditText
            android:id="@+id/donor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/address"
            android:layout_alignRight="@+id/address"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/etmail"

            android:text="Phone No."
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_alignRight="@+id/donor_phone"
            android:layout_alignEnd="@+id/donor_phone"
            android:layout_alignLeft="@+id/donor_phone"
            android:layout_alignStart="@+id/donor_phone" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Enter your email"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_alignRight="@+id/address"
            android:layout_alignEnd="@+id/address"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address" />

        <EditText
            android:id="@+id/etmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_below="@+id/textView8"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@color/colorAccent"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Request time duration"
    android:layout_below="@+id/donor_phone"
    android:textColor="@color/colorPrimary"
    android:textSize="25dp"
    android:layout_alignLeft="@+id/donor_phone"
    android:layout_alignStart="@+id/donor_phone"
    android:layout_alignRight="@+id/donor_phone"
    android:layout_alignEnd="@+id/donor_phone"
    android:id="@+id/textView9" />
        <LinearLayout
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_phone"
            android:layout_marginTop="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1"

            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignEnd="@+id/textView9">
        <EditText
            android:id="@+id/etxt_fromdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="@string/from_date"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="to    "
    android:layout_marginRight="10dp"
    android:textSize="25dp"
    android:textColor="@color/colorPrimary"
    />
            <EditText
                android:id="@+id/etxt_todate"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="22dp"
                android:textColorHint="@color/colorPrimary"
                android:layout_toLeftOf="@+id/btngetLocation"
                android:layout_toStartOf="@+id/btngetLocation"
                android:textColor="@color/colorPrimary"
                android:hint="deadline"
                android:textSize="20dp"
                android:onClick=""/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>