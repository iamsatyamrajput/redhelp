<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.satyam.redhelp.Become_DonorActivity"
    android:background="#fdfffefe">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Details"
       android:textSize="30sp"
        android:typeface="sans"
        android:gravity="center"
        android:textStyle="bold" style=""
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Blood Group"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5" />
<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    android:layout_margin="10dp"
    android:foregroundGravity="center"
    android:scrollIndicators="bottom"
    android:scrollbarStyle="insideOverlay"
    android:layout_alignTop="@+id/textView5"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="13dp"
    android:id="@+id/horizontalScrollView">



    <RadioGroup
        android:id="@+id/blood_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/abp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="AB+"
            android:textAlignment="center" />

        <RadioButton

            android:id="@+id/abn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="AB-"

            android:textAlignment="center" />

        <RadioButton

            android:id="@+id/ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="A+"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/an"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="A-"
            android:textAlignment="center" />


        <RadioButton
            android:id="@+id/bp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="B+"
            android:textAlignment="center" />
        <RadioButton
            android:id="@+id/bn"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="B-"
            android:textAlignment="center" />
        <RadioButton
            android:id="@+id/op"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="O+"
            android:textAlignment="center" />
        <RadioButton
            android:id="@+id/on"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:text="O-"
            android:textAlignment="center" />

    </RadioGroup>

</HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scroll to view more group"
        android:textColor="@color/gray"
        android:layout_marginTop="61dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your address"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address"
        android:background="@color/colorAccent"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_alignEnd="@+id/horizontalScrollView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Location Coordinates"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginTop="100dp"
        android:id="@+id/textView7" />
    <fragment
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/map"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_below="@id/textView7"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:context="com.example.satyam.redhelp.Add_Request_Activity"

        class="com.google.android.gms.maps.SupportMapFragment" />
    <Button
        android:id="@+id/btngetLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Location"
        android:layout_alignBottom="@+id/map"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/map"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:id="@+id/donor_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignRight="@+id/address"
        android:layout_alignEnd="@+id/address" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:text="Phone No."
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="14dp" />

</RelativeLayout>
</ScrollView>