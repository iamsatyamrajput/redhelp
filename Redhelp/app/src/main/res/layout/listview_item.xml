<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#e6e9e7e7"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"

   >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:background="@drawable/layer"
        android:focusable="false"
        android:focusableInTouchMode="false"

        >
        <TextView
            android:id="@+id/b_group_list"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:text="AB+"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/round_button_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:elevation="5dp"
            android:background="@drawable/myrect"


           >
            <TextView
                android:id="@+id/username_list"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="username"
                android:textColor="@color/dark_gray"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_above="@+id/phone_list" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Deadline:"
    android:textColor="@color/dark_gray"
    android:id="@+id/textView11"
    android:layout_alignBaseline="@+id/phone_list"
    android:layout_alignBottom="@+id/phone_list"
    android:layout_alignLeft="@+id/username_list"
    android:layout_alignStart="@+id/username_list" />
            <TextView
                android:id="@+id/phone_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textColor="@color/dark_gray"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" />
        </RelativeLayout>

        </LinearLayout>
</RelativeLayout>